{
  "name": "veggiemat",
  "version": "1.0.0",
  "description": "Front-end for VeggieMat",
  "repository": "artiparty/veggiemat",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "cssnano": "^4.1.0",
    "del": "^3.0.0",
    "eslint-config-hudochenkov": "~3.0.0",
    "eslint-config-prettier": "~3.1.0",
    "gulp": "^4.0.0",
    "gulp-eslint": "~5.0.0",
    "gulp-header": "^2.0.5",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-rev": "^8.1.1",
    "gulp-rev-replace": "^0.4.4",
    "gulp-stylelint": "~7.0.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "postcss-assets": "^5.0.0",
    "postcss-calc": "^6.0.1",
    "postcss-custom-media": "^7.0.4",
    "postcss-hexrgba": "^1.0.1",
    "postcss-import": "^12.0.0",
    "postcss-inline-svg": "^3.1.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^4.1.0",
    "postcss-property-lookup": "^2.0.0",
    "postcss-simple-vars": "^5.0.1",
    "prettier": "~1.14.3",
    "stylelint": "~9.5.0",
    "stylelint-config-hudochenkov": "~2.0.5",
    "stylelint-config-prettier": "~4.0.0",
    "stylelint-order": "~1.0.0",
    "stylelint-scss": "~3.3.1"
  },
  "scripts": {
    "build": "gulp build",
    "start": "gulp",
    "test": "gulp lint",
    "fix:css": "stylelint --fix \"**/*.pcss\" && prettier --write \"**/*.pcss\"",
    "fix:js": "eslint --fix . && prettier --write \"**/*.js\"",
    "fix": "npm run fix:css && npm run fix:js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-hudochenkov",
      "stylelint-config-prettier"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-hudochenkov",
      "eslint-config-prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "object-shorthand": "off",
      "prefer-template": "off"
    }
  }
}
